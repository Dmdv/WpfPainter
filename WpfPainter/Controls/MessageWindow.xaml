<xctk:ChildWindow x:Class="WpfPainter.Controls.MessageWindow"
                  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                  xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
                  Width="400" Height="300"
                  Caption="ChildWindow1">

    <Grid Margin="2">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Button x:Name="_cancelButtonControl" Content="Cancel" Click="CancelButtonClick" Width="75" Height="23"
                HorizontalAlignment="Right" Margin="0,12,0,0" Grid.Row="1" />
        <Button x:Name="_okButtonControl" Content="OK" Click="OkButtonClick" Width="75" Height="23" HorizontalAlignment="Right"
                Margin="0,12,79,0" Grid.Row="1" />
        <TextBlock x:Name="_textContentControl" TextWrapping="Wrap" Text="TextBlock" FontFamily="Trebuchet MS" FontSize="16"
                   TextAlignment="Center" Margin="10" Padding="0" HorizontalAlignment="Center"
                   VerticalAlignment="Center" />
    </Grid>
</xctk:ChildWindow>